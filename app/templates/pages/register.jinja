{#=====================================================
  User Registration page
  - Form for adding a new user
=====================================================#}
{% extends "pages/base.jinja" %}
{% block title %}
    TodoList - Register
{% endblock title %}
{% block content %}
    <article>
        <header>
            <h2>Sign up for TodoList</h2>
        </header>
        <form action="/add-user" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password"
                   name="password"
                   placeholder="Password"
                   required
                   minlength="8">
            <button>Register</button>
        </form>
        <footer>
            Or, if you already have an account, <a href="/login">login</a>
        </footer>
    </article>
{% endblock content %}
